{
  "manifest_version": 3,
  "name": "Slacker",
  "version": "1.0.0",
  "description": "An extension to remind you to exercise while working",
  "icons": {
    "48": "icon-48.png",
    "128": "icon-48.png"
  },
  "background": {
    "service_worker": "service-worker.js",
    "persistant": "true"
  },
  "action": { "default_popup": "index.html" },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "webRequest",
    "webNavigation",
    "notifications",
    "contextMenus",
    "unlimitedStorage"
  ],
  "host_permissions": ["http://*/*", "https://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"]
    }
  ]
}
